@model IEnumerable<Garage3.Models.ViewModels.VehicleTypeViewModel>

@{
    ViewData["Title"] = "ListVehicleTypes";
}

<h1>List of vehicle types</h1>

<p>
    <a asp-action="CreateVehicleType">Create New Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                      @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-action="EditVehicleType" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DeleteVehicleType" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
