@model IEnumerable<ParkedVehicle>
@{
    ViewData["Title"] = "Index";

}




<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Registration number <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </p>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.RegistrationNumber)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.TimeOfArrival)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfArrival)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ParkedVehicleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ParkedVehicleId">Checkout</a>
                    @* <a asp-action="Delete" asp-route-id="@item.ParkedVehicleId">Delete</a> *@
                </td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="Index">Back to Full List</a>
