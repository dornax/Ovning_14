@model Garage3.Models.ViewModels.MemberShowViewModel

@{
    ViewData["Title"] = "Delete Member";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoOfVehicles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoOfVehicles)
        </dd>
    </dl>


    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Vehicles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoOfVehicles)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model.Vehicles)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => v.RegistrationNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.NumberOfWheels)
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
